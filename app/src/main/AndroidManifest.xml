<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nanchen.aiyagirl">

    <!-- 网络访问权限申明 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 闪屏页 -->
        <activity
            android:name=".module.splash.SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/ViewBigPicTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 主页面 -->
        <activity
            android:name=".module.home.HomeActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>

        <!-- Web页 -->
        <activity
            android:name=".module.web.WebViewActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <!--项目主页-->
        <activity android:name=".module.navhome.NavHomeActivity"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <!--问题反馈-->
        <activity android:name=".module.navdeedback.NavDeedBackActivity"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <!--关于我们-->
        <activity android:name=".module.navabout.NavAboutActivity"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>